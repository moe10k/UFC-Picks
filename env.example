# Production Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Configuration (leave empty for production)
CORS_ORIGIN=

# Database Configuration (optional, will use default path if not set)
DATABASE_PATH=/path/to/persistent/database.sqlite

# Security
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_AUTH=5
RATE_LIMIT_GENERAL=100

# Logging
LOG_LEVEL=info
