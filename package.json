{
  "name": "ufc-picks",
  "version": "1.0.0",
  "description": "A full-stack web application for making and tracking UFC fight predictions",
  "main": "server/index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "seed": "cd server && npm run seed",
    "start": "cd server && npm start",
    "heroku-postbuild": "npm run install-all && cd client && npm run build",
    "migrate:sqlite-to-postgres": "cd server && npm run migrate:sqlite-to-postgres",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "keywords": [
    "ufc",
    "mma",
    "predictions",
    "picks",
    "react",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ufc-picks.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ufc-picks/issues"
  },
  "homepage": "https://github.com/yourusername/ufc-picks#readme"
} 