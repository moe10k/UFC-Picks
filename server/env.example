# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For development (SQLite):
# Database file will be created automatically as database.sqlite

# For production (PostgreSQL):
# DATABASE_URL=postgres://username:password@host:port/database_name
# Example: DATABASE_URL=postgres://user:pass@localhost:5432/ufc_picks

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
# Set to true in production to enable additional security measures
ENABLE_RATE_LIMITING=true
ENABLE_STRICT_CORS=true 