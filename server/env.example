# Server Configuration
PORT=5000
NODE_ENV=development

# SQLite Database (file-based, no installation required)
# Database file will be created automatically as database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
# Set to true in production to enable additional security measures
ENABLE_RATE_LIMITING=true
ENABLE_STRICT_CORS=true 